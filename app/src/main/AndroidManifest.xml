<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chloe.bceo" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.VerifyActivity"
            android:label="@string/title_activity_verify" >
        </activity>
        <activity
            android:name=".view.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".view.GroupsActivity"
            android:label="@string/title_activity_groups" >

        </activity>
        <activity
            android:name=".view.BrowseActivity"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity android:name=".view.MypageActivity" >
        </activity>
        <activity android:name=".view.OrderActivity" >
        </activity>
        <activity android:name=".view.SellActivity" >
        </activity>
        <activity android:name=".view.ProductActivity" >
        </activity>
        <activity android:name=".view.MarketActivity" >
        </activity>


    </application>

</manifest>
