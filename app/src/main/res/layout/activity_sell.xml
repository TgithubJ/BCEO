<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chloe.bceo.view.SellActivity">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/sell1"
        android:id="@+id/frameLayout3"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"></FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="confirm"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/sell1"
        android:layout_alignParentTop="true"

        android:id="@+id/frameLayout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title: Sony Toaster"
        android:textSize="25sp"
        android:id="@+id/textView3"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/frameLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price: $15"
        android:textSize="25sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.chloe.bceo.view.FragmentBottomMenu"
        android:id="@+id/fragment4"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_bottom_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_camera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout" />
    <ImageView
        android:id="@+id/imagecaptured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignTop="@+id/frameLayout" />

</RelativeLayout>
