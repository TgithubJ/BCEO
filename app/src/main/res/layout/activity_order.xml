<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="- Buy -"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:name="com.example.chloe.bceo.fragment.FragmentBuyList"
        android:id="@+id/fragment"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_list_item" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="- Sell -"
        android:id="@+id/textView2"
        android:layout_below="@+id/fragment"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:name="com.example.chloe.bceo.fragment.FragmentSellList"
        android:id="@+id/fragment2"
        tools:layout="@layout/fragment_list_item"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="com.example.chloe.bceo.fragment.FragmentBottomMenu"
        android:id="@+id/fragment5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_bottom_menu" />

</RelativeLayout>
